{
	"name": "instantaneoustranslator",
 	"description": "This Chrome App can instantaneously translate any selected text on the current page",
 	"version": "0.0.1",
 	"author": "Dmytro Pustovit",
 	"manifest_version": 2,
  	"icons": { 
  		"16": "icons/16-a.png",
  		"32": "icons/32-a.png",
  		"64": "icons/64-a.png"
  	},
  	"background": {
    	"scripts": ["background.js", "secret.js","languages.js"]
    },
  	"browser_action": {
		"default_icon": {                    
            "64": "icons/test_ico.png"
        },
      	"default_title": "Tooltip"
    },
    "content_scripts": [
  		{
  			"matches": ["<all_urls>"],
    		"js": ["content.js"]
  		}
	],
    "permissions": ["notifications"]
}