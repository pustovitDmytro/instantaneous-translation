{
	"name": "instantaneoustranslator",
 	"description": "This Chrome App can instantaneously translate any selected text on the current page",
 	"version": "0.0.1",
 	"author": "Dmytro Pustovit",
 	"manifest_version": 2,
  	"icons": { 
  		"16": "1.png",
  		"32": "3.png",
  		"64": "4.png"
  	},
  	"background": {
    	"scripts": ["index.js"],
    	"persistent": false
    },
  	"browser_action": {
		"default_icon": {                    
            "16": "2.png"
        },
      	"default_title": "Tooltip"
    },
    "permissions": [
    "alarms","notifications"
   ]
}